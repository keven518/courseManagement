/* pages/myhome/myhome.wxss */


page {
  background: #f6f6f6;
  height: 100%;
}

.container0 {
  background: #f6f6f6;
}

.header_avatar {
  height: 144px;
  background: #4675f9;
  border-radius: 0 0 5% 5% / 5%;
  position: relative;
}

.header_box {
  padding-top: 15px;
  padding-left: 25px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.myheader_pic {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  overflow: hidden;
}
.avatar_pic{
  width: 60px;
  height: 60px;
}

  
.myheader_name {
  color: #fff;
  font-size: 13px;
  padding-left: 10px;
  font-weight: bold;
}

.mybar_box {
  border-radius: 5px;
  background: #fff;
  color: #333;
  position: absolute;
  top: 88px;
  left: 10px;
  right: 10px;
}

.mybar_list {
  padding: 0 10px;
  height: 45px;
  font-size: 14px;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.mybar_list:last-child {
  border-bottom: none;
}

.my_icon {
  width:30px;
  height: 30px;
  margin-right: 4px;
}

.icon_arrow {
  width: 6px;
  height: 21rpx;
  margin-left: auto;
  margin-right: 0px;
}

.my_banner {
  position: absolute;
  left: 10px;
  right: 10px;
  top: 238px;
}

.mybanner_pic {
  width: 100%;
}

.newshare_box {
  position: fixed;
  bottom: 5px;
  right: 5px;
  width: 75px;
  height: 75px;
}

.newshare_pic {
  width: 75px;
  height: 75px;
}

.myorder_bar{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 10px 10px 5px 10px;
  color: #4675f9;

}
.myorder_txt{ margin-left: auto;
  margin-right: 0px;}